<%= form_for list do |f| %>
  <% if list.errors.any? %>
    <div class="alert alert-danger">
      <h4>There is <%= pluralize(list.errors.count, "error") %></h4>
      </ul>
        <%list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <%end%>
      </ul>
    </div>
    <%end%>
      <%= form_group_tag(list.errors[:name]) do %>
        <%=f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter list name" %>
      <%end%>
       <div class="form-group">
         <%= f.label :description  %>
         <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter list description" %>
       </div>
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>