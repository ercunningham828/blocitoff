
<body data-spy="scroll">
    
    <!-- ******HEADER****** --> 
    <header id="header" class="header">  
        <div class="container">            
            <h1 class="logo pull-left">
                <a class="scrollto" href="#promo">
                    <span class="logo-title">BlocitOff</span>
                </a>
            </h1><!--//logo-->              
            <nav id="main-nav" class="main-nav navbar-left" role="navigation">
                <div class="navbar-header">
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button><!--//nav-toggle-->
                </div><!--//navbar-header-->            
                <div class="navbar-collapse collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active nav-item sr-only" <%= link_to "About", about_path, method: :get %></li>
                        <li class="nav-item"><a class="scrollto"<%= link_to "About", about_path,method: :get %></a></li>
                   </ul><!--//nav-->
                </div><!--//navabr-collapse-->
            </nav><!--//main-nav-->

                <nav id="main-nav" class="main-nav navbar-right" role="navigation">
                  <div class="navbar-collapse collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav">
                      <% if current_user %>
                        <li class="nav-itempink scrollto"><a class="scrollto" >Hello <%= current_user.email %>!</a></li>
          
                        <li class="nav-item"><a class="scrollto"<%= link_to "Sign Out", destroy_user_session_path,method: :delete %></a></li>

                      <% else %>
                           <li class="active nav-item sr-only" <%= link_to "Sign In", new_user_session_path, method: :get %></li>
                        <li class="nav-item"><a class="scrollto"<%= link_to "Sign In", new_user_session_path,method: :get %></a></li>
                        <li class="active nav-item sr-only" <%= link_to "Sign Up", new_user_registration_path, method: :get %></li>
                        <li class="nav-item"><a class="scrollto"<%= link_to "Sign Up", new_user_registration_path,method: :get %></a></li>
                      <% end %>
          
                    </ul><!--//nav-->
                </div><!--//navabr-collapse-->
            </nav><!--//main-nav-->
        </div>
    </header><!--//header-->
    
    <!-- ******PROMO****** -->
